{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CommentResponse",
  "type": "object",
  "required": ["id", "post_id", "name", "email", "body"],
  "properties": {
    "id": {
      "type": "integer"
    },
    "post_id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "body": {
      "type": "string"
    }
  }
}
